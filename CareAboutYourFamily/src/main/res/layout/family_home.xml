<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/f000_l002"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/Bisque"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/f000_t007"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/SandyBrown"
                android:gravity="center"
                android:text="@string/f000_t007"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/f000_b000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="@string/b000_b000"
                android:textSize="28sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White">

            <TextView
                android:id="@+id/f000_t001"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/f000_t002"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/f000_t002"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f000_t003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/f000_t003"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/f000_hr01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/SandyBrown" />

        <ListView
            android:id="@+id/f000_lv001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/f000_l002"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/f000_l001"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/f000_r003">

            <RelativeLayout
                android:id="@+id/f000_r004"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/f000_t004"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/SandyBrown"
                    android:gravity="center"
                    android:text="@string/f000_t004"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/f000_b001"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:gravity="center"
                    android:text="@string/b000_b000"
                    android:textSize="28sp"
                    android:visibility="gone" />

                <ScrollView
                    android:id="@+id/f000_scroll01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/f000_t004"
                    android:layout_marginTop="0dp"
                    android:background="@color/Bisque">

                    <LinearLayout
                        android:id="@+id/f000_l020"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/f000_r003"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/Bisque">

            <TextView
                android:id="@+id/f000_t011"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@color/SandyBrown"
                android:gravity="center"
                android:text="@string/f000_t011"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/f000_t010"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f000_t011"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:padding="5dp"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/f000_t006"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/family_btn_rectangle_radius"
                    android:padding="15dp"
                    android:text="@string/f000_t006"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/f000_t020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/f000_t006"
                    android:background="@drawable/family_btn_rectangle_radius"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/f000_t020"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/f000_t021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f000_t010"
                android:layout_marginTop="0dp"
                android:gravity="right|end"
                android:padding="5dp"
                android:text="@string/f000_t021"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>


    <!--  BottomNavigationView項目超過三個會隱藏標題，所以要app:labelVisibilityMode="labeled"     -->

</RelativeLayout>