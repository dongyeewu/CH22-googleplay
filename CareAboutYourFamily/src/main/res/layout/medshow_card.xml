<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/medshow_bg_rectangle_with_arc"
        android:padding="15dp">

        <TextView
            android:id="@+id/medshow_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/medshow_content"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/medshow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medshow_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/recordedit_15dp"
            android:padding="@dimen/p5dp"
            android:text="@string/medshow_time"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/medshow_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medshow_time"
            android:layout_toStartOf="@+id/medshow_del"
            android:padding="15dp"
            android:text="@string/medshow_edit"
            android:textColor="@color/DarkBlue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/medshow_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medshow_time"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:text="@string/medshow_del"
            android:textColor="@color/DarkBlue"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>