<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cornsilk"
    android:orientation="vertical"
    android:padding="@dimen/sm10dp">

    <LinearLayout
        android:id="@+id/guest_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/guestView_t001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/home_bd_t001"
            android:textColor="@color/Brown"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/guestView_t002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/recordedit_20dp"
            android:background="@color/Lavender"
            android:gravity="center"
            android:text="@string/home_bd_t002"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/guestView_img01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recordedit_15dp"
            app:srcCompat="@drawable/ic_group" />

        <TextView
            android:id="@+id/guestView_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cayf_t006"
            android:textColor="@color/DarkOrange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guestView_t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recordedit_15dp"
            android:background="@color/Lavender"
            android:gravity="center"
            android:text="@string/home_bd_t003"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/guestView_img02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recordedit_15dp"
            app:srcCompat="@drawable/ic_board" />

        <TextView
            android:id="@+id/guestView_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cayf_t007"
            android:textColor="@color/DarkOrange"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/noFamily_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">


        <TextView
            android:id="@+id/noFamily_t001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home_bd_t004"
            android:textColor="@color/Brown"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/noFamily_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/recordedit_20dp"
            android:background="@drawable/family_btn_rectangle_radius"
            android:gravity="center"
            android:text="@string/home_bd_t005"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noPost_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Cornsilk"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">


        <TextView
            android:id="@+id/noPost_t001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home_bd_t006"
            android:textColor="@color/Brown"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/noPost_img"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recordedit_10dp"
            app:srcCompat="@drawable/ic_baseline_sort_24" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_bd_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/boardShow_title"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/home_bd_fragment_creater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/boardShow_creater"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/home_bd_fragment_createTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/boardShow_createTime"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/home_bd_fragment_contextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/boardShow_context"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Bisque">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_bd_fragment_context"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Bisque"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>




</RelativeLayout>