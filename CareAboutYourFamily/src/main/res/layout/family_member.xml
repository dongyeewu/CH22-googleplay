<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/f005_l000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Bisque"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f005_t000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/SandyBrown"
            android:gravity="center"
            android:text="@string/f005_t000"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/f005_l001"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/f005_l002"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/f005_t001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/f005_t001"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/f005_t011"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24sp" />

                </TableRow>

            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/f005_t002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/f005_t002"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/f005_t012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp" />
        </TableRow>

    </LinearLayout>

</RelativeLayout>